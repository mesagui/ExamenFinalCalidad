@using ExamenFinal.Models
@model Nota


    <div class="text-center">
        <h3>Compartir Nota</h3>
    </div>

<div>

    <form action="@Url.Action("Compartir")" method="post">
        <span> @Html.HiddenFor(model => model.NotaId)</span>
        
        <div class="form-group">
            <label>Nota:</label>
            <h4>@Model.Titulo</h4>
        </div>

        <br />
        
        <div class="form-group">
            <label>Usuario:</label>
            <select name="UserId" class="form-control">
                <option value="" disabled="" selected="">Seleccionar</option>
                @foreach (var user in (List<Usuario>) ViewBag.Usuarios)
                {
                    <option value="@user.Id">@user.UserName</option>
                }
            </select>
            @Html.ValidationMessage("UserId")
        </div>
        
        <button class="btn btn-outline-success" type="submit"> <i class="far fa-save"></i> Compartir </button>
    </form>
</div>